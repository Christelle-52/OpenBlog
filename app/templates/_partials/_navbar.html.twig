                <rect y="70" width="100" height="15" rx ="8"></rect>
            </svg>
        </span>
        <ul class="nav-menu">
            <li class="nav-item active">
                <a href="{{ path('app_main') }}">{% trans %}Home{% endtrans %}</a>
